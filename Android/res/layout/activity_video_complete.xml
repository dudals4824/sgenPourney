<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/controller"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:fillViewport="true"
    tools:context="sgen.android.photoput.PhotoputActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:id="@+id/video_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <!-- 상단 단계 부분 -->

        <RelativeLayout
            android:id="@+id/layoutMakingMovie"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/imgBackVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/i_back_videocomplete" />

              <VideoView
                  android:id="@+id/VideoView"
                  android:layout_width="match_parent"
                  android:layout_height="243dp"
                  
                  android:layout_alignBottom="@+id/imgBackVideo"
                  android:layout_alignParentLeft="true"
                  android:layout_marginBottom="50dp" />

				<ImageView
				    android:id="@+id/video_view_logo"
				    android:layout_width="300px"
				    android:layout_height="300px"
				    android:layout_alignParentBottom="true"
				    android:layout_centerHorizontal="true"
				    android:src="@drawable/i_logoimage" />

				<ImageButton
				    android:id="@+id/facebook_sharing_btn"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_above="@+id/video_view_logo"
				    android:layout_alignLeft="@+id/video_view_logo"
				    android:layout_marginBottom="12dp"
				    android:background="@android:color/transparent"
				    android:src="@drawable/facebook_share_button_300x100" />

        </RelativeLayout>
       
      
            
            
    </LinearLayout>

</RelativeLayout>